#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ“ Running commit message validation..."

# Get the commit message
commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore|ci|build)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
  echo "âŒ Invalid commit message format!"
  echo ""
  echo "ğŸ“‹ Commit message format should be:"
  echo "   <type>[optional scope]: <description>"
  echo ""
  echo "ğŸ“ Valid types:"
  echo "   â€¢ feat:     A new feature"
  echo "   â€¢ fix:      A bug fix"
  echo "   â€¢ docs:     Documentation changes"
  echo "   â€¢ style:    Code style changes (formatting, etc.)"
  echo "   â€¢ refactor: Code refactoring"
  echo "   â€¢ perf:     Performance improvements"
  echo "   â€¢ test:     Adding or updating tests"
  echo "   â€¢ chore:    Maintenance tasks"
  echo "   â€¢ ci:       CI/CD changes"
  echo "   â€¢ build:    Build system changes"
  echo ""
  echo "âœ… Examples:"
  echo "   feat: add Key Vault random name generation"
  echo "   fix(bicep): resolve BCP318 warning with non-null assertion"
  echo "   docs: update README with deployment instructions"
  echo "   chore: update container image versions"
  echo ""
  exit 1
fi

echo "âœ… Commit message format is valid!"
exit 0
